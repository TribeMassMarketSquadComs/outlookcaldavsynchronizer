<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="CalDavSynchronizer.OAuth.Swisscom.ErrorWindow"
        xmlns:g="clr-namespace:CalDavSynchronizer.OAuth.Swisscom.Globalization"
        Title="{g:Localize LABEL_ERROR}"
        Width="400"
        Height="130"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Icon="swisscom-favicon.ico"
        Closing="Action_ErrorWindow_Cancel"
        >
    <DockPanel>
        <DockPanel
            Dock="Top"
            Width="400"
            Height="100"
            x:Name="ErrorDockPanel"
            >
        </DockPanel>
        <DockPanel
            Dock="Bottom"
            HorizontalAlignment="Right"
            Height="30"
            MinHeight="30"
            MaxHeight="30"
            >
            <Button
                Name="Button_Cancel"
                Width="75"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,5,5,5"
                Click="Action_ErrorWindow_Button_Close"
                Content="{g:Localize LABEL_BUTTON_CANCEL}"
                />
        </DockPanel>
    </DockPanel>
</Window>
